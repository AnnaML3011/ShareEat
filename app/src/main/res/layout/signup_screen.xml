<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Activity_Main"
    android:orientation="vertical"
    android:background="@drawable/food5">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="25dp"
        android:layout_height="27dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_arrow" />

    <LinearLayout
        android:id="@+id/logo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="70dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="70dp"
            android:textStyle="bold"
            android:fontFamily="@font/sofia_regular"
            android:textColor="@color/g_700"
            android:gravity="center_horizontal"/>

    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginTop="280dp">


        <EditText
            android:id="@+id/signUp_uName_LBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:background="@drawable/inputs"
            android:ems="12"
            android:gravity="center_horizontal"
            android:hint="Enter your user name..."
            android:padding="10dp" />

        <EditText
            android:id="@+id/signUp_email_LBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:background="@drawable/inputs"
            android:ems="12"
            android:gravity="center_horizontal"
            android:hint="Enter your email..."
            android:padding="10dp" />


        <EditText
            android:id="@+id/signUp_password_LBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:background="@drawable/inputs"
            android:ems="12"
            android:gravity="center_horizontal"
            android:hint="Enter your password..."
            android:inputType="textPassword"
            android:padding="10dp" />

        <EditText
            android:id="@+id/verify_password_LBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:background="@drawable/inputs"
            android:ems="12"
            android:gravity="center_horizontal"
            android:hint="Verify your password..."
            android:inputType="textPassword"
            android:padding="10dp" />

        <Button
            android:id="@+id/signup_BTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="Sign Up"
            android:ems="13"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</RelativeLayout>