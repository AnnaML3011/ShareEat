<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/food5">


    <LinearLayout
        android:id="@+id/logo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/back_gradient"
            android:alpha="0.1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="70dp"
            android:textStyle="bold"
            android:textColor="@color/g_800"
            android:gravity="center_horizontal"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginTop="280dp">


        <EditText
            android:id="@+id/user_name_LBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:background="@drawable/inputs"
            android:ems="12"
            android:gravity="center_horizontal"
            android:hint="Enter your user name..."
            android:inputType="textPassword"
            android:padding="10dp" />

        <EditText
            android:id="@+id/login_email_LBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:background="@drawable/inputs"
            android:ems="12"
            android:gravity="center_horizontal"
            android:hint="Enter your email..."
            android:inputType="textPassword"
            android:padding="10dp" />


        <EditText
            android:id="@+id/login_password_LBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:background="@drawable/inputs"
            android:ems="12"
            android:gravity="center_horizontal"
            android:hint="Enter your password..."
            android:inputType="textPassword"
            android:padding="10dp" />

        <EditText
            android:id="@+id/verify_password_LBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:background="@drawable/inputs"
            android:ems="12"
            android:gravity="center_horizontal"
            android:hint="Verify your password..."
            android:inputType="textPassword"
            android:padding="10dp" />

        <Button
            android:id="@+id/signup_BTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="Sign Up"
            android:ems="13"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</RelativeLayout>