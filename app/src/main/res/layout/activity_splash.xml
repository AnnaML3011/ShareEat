<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Activity_Splash">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/food5"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3" />



    <TextView
        android:id="@+id/splash_LBL_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginBottom="320dp"
        android:text="@string/app_name"
        android:textColor="@color/g_700"
        android:fontFamily="@font/sofia_regular"
        android:textSize="70sp" />

    <ImageView
        android:id="@+id/splash_IMG_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/splash_LBL_name"
        android:layout_centerHorizontal="true"
        android:src="@drawable/chef2_splash"/>

</RelativeLayout>